</head>
  <body>
	<%= render :partial => 'layouts/navbar' %>
    <div class="container-fluid">
      <div class="row-fluid">
        <div class="span12">
		  <%= render :partial => 'layouts/flashes' %>
          <%= yield %>
        </div>
      </div><!--/row-->
	  <%= render :partial => 'layouts/footer' %>
    </div> <!-- /container -->
    <%= javascript_include_tag "application" %>
  </body>
</html>
